            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:clickable="true"
            android:text="행복" />
    </LinearLayout>

    <!-- Image 3 and Text 3 -->
    <LinearLayout
        android:id="@+id/emotionCloud2"
        android:layout_column="2"
        android:layout_columnWeight="1"
        android:layout_gravity="center"
        android:layout_row="1"
        android:orientation="horizontal"
        android:clickable="true"
        android:focusable="true"
        android:paddingVertical="@dimen/emotionVerticalPadding"
        android:background="@drawable/emotion_border_selector"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/emotionCloudRow2"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:padding="0dp"
            android:layout_marginRight="2dp"
            android:clickable="true"
            app:srcCompat="@drawable/icon_cloud" />

        <TextView
            android:id="@+id/normal2Button"
            style="@style/EMOTION"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:clickable="true"
            android:text="모름" />
    </LinearLayout>

    <!-- Image 4 and Text 4 -->
    <LinearLayout
        android:id="@+id/emotionRain2"
        android:layout_column="3"
        android:layout_columnWeight="1"
        android:layout_gravity="center"
        android:layout_row="1"
        android:orientation="horizontal"
        android:clickable="true"
        android:focusable="true"
        android:paddingVertical="@dimen/emotionVerticalPadding"
        android:background="@drawable/emotion_border_selector"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/emotionRainRow2"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:padding="0dp"
            android:layout_marginRight="2dp"
            android:clickable="true"
            app:srcCompat="@drawable/icon_rain" />

        <TextView
            android:id="@+id/sad2Button"
            style="@style/EMOTION"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:clickable="true"
            android:text="우울" />
    </LinearLayout>

    <!-- Image 5 and Text 5 -->
    <LinearLayout
        android:id="@+id/emotionLightning2"
        android:layout_column="4"
        android:layout_columnWeight="1"
        android:layout_gravity="center"
        android:layout_row="1"
        android:orientation="horizontal"
        android:clickable="true"
        android:focusable="true"
        android:paddingVertical="@dimen/emotionVerticalPadding"
        android:background="@drawable/emotion_border_selector"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/emotionLightningRow2"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:padding="0dp"
            android:layout_marginRight="2dp"
            android:clickable="true"
            app:srcCompat="@drawable/icon_lightning" />

        <TextView
            android:id="@+id/angry2Button"
            style="@style/EMOTION"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:clickable="true"
            android:text="화남" />
    </LinearLayout>


</GridLayout>


