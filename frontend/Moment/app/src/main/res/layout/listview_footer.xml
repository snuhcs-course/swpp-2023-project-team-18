<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="16dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/inputEditText"
            android:layout_width="match_parent"
            android:layout_height="@dimen/editTextHeight"
            android:padding="@dimen/editTextPadding"
            android:textSize="15sp"
            android:gravity="top|start"
            android:hint="@string/edit_text_message"
            android:inputType="text|textMultiLine"
            android:visibility="gone"
            android:background="@drawable/box_border"/>
        <!-- 버튼과 글자수를 수평으로 배열하는 LinearLayout -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="10dp">

            <!-- 글자수 실시간으로 보여줌 -->
            <TextView
                android:id="@+id/textCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:background="@color/white"
                android:textColor="@color/gray"
                android:visibility="gone"
                android:text="" />

            <Button
                android:id="@+id/submit_button"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/moment_write_button"
                android:onClick="submitInput"
                android:text=""
                android:gravity="center"
                android:visibility="gone" />

            <Button
                android:id="@+id/submit_button_inactivate"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/moment_write_inactivate"
                android:text=""
                android:gravity="center"
                android:visibility="gone" />
        </LinearLayout>
    </FrameLayout>

    <Button
        android:id="@+id/add_button"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/moment_add_button"
        android:onClick="showInputFields"
        />
    <TextView
        android:id="@+id/add_button_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/maruburi_light"
        android:text="새 모먼트 추가"
        android:textColor="@color/gray"
        />

</LinearLayout>
